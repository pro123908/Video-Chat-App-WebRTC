<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Chat Room</title>

    <style></style>

    <link rel="stylesheet" href="style.css" />
    <script>
      // getting the room ID that is passed to the template and saving it in the variable
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>

    <!-- including socket library from the server -->
    <script src="/socket.io/socket.io.js" defer></script>

    <script src="script.js" defer></script>
  </head>
  <body>
    <!-- <h4>Mobile : <span id="device"></span></h4> -->
    <div id="video-grid">
      <div class="video-container">
        <video controls src="assets/video-1.mp4"></video>
        <div class="buttons-container">
          <button id="front" class="chat-button front-button">
            Front Camera
          </button>
          <button id="back" class="chat-button back-button">Back Camera</button>
          <button id="record" class="chat-button front-button">Record</button>
          <button id="stop" class="chat-button front-button">Stop</button>
        </div>
      </div>

      <div class="video-container">
        <video controls src="assets/video-2.mp4"></video>
      </div>
      <div class="video-container">
        <video controls src="assets/video-3.mp4"></video>
      </div>
      <div class="video-container">
        <video controls src="assets/video-4.mp4"></video>
      </div>
    </div>

    <h3>
      <button id="front" disabled>Front Camera</button>
      <button id="back" disabled>Back Camera</button>
    </h3>

    <h3>
      <button id="record">Record</button>
      <button id="stop">Stop</button>
    </h3>

    <h3>Recorded Video</h3>
    <video src="" id="vid2" controls></video>
  </body>
</html>
