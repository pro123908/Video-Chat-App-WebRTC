<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Room</title>

    <style>
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
      }

      video {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }

      #vid2 {
        /* display: none; */
        height: 300px;
        width: 300px;
      }
    </style>

    <script>
      // getting the room ID that is passed to the template and saving it in the variable
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>

    <!-- including socket library from the server -->
    <script src="/socket.io/socket.io.js" defer></script>

    <script src="script.js" defer></script>
  </head>
  <body>
    <h4>Mobile : <span id="device"></span></h4>
    <div id="video-grid"></div>

    <h3>
      <button id="front">Front Camera</button>
      <button id="back">Back Camera</button>
    </h3>

    <h3>
      <button id="record">Record</button>
      <button id="stop">Stop</button>
    </h3>

    <h3>Recorded Video</h3>
    <video src="" id="vid2" controls></video>
  </body>
</html>
